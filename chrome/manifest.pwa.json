{
  "version": "0.1.2",
  "name": "KeyCache Password Manager",
  "short_name": "KeyCache",
  "manifest_version": 2,
  "description": "KeyCache secure password manager PWA",
  "browser_action": {
    "default_title": "KeyCache",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/content.bundle.js"]
  }],

  "permissions": [ "contextMenus", "tabs", "storage", "https://github.com/*" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; font-src * 'unsafe-inline' 'self' blob:; img-src 'self' data:;"
}
